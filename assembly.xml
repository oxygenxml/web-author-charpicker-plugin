<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>plugin</id>
	<formats>
		<format>jar</format>
	</formats>
	
	<fileSets> 
		<fileSet>
			<directory>target/</directory>
			<outputDirectory>/web</outputDirectory>
			<includes>
				<include>plugin.js</include>
			</includes>
		</fileSet> 
		<fileSet>
      <directory>i18n/</directory>
      <outputDirectory>/i18n</outputDirectory>
      <includes>
        <include>translation_categories.xml</include>
      </includes>
    </fileSet> 
    <fileSet>
      <directory>target/i18n/</directory>
      <outputDirectory>/i18n</outputDirectory>
    </fileSet> 
		<fileSet>
			<directory>target/</directory>
			<outputDirectory>/resources</outputDirectory>
			<includes>
				<include>charpicker.html</include>
				<include>js/script.min.js</include>
				<include>css/styles.min.css</include>
				<include>css/plugin.css</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>resources/</directory>
			<outputDirectory>/resources</outputDirectory>
			<includes>
				<include>BackwardDelete.svg</include>
				<include>InsertFromCharactersMap24.png</include>
				<include>InsertFromCharactersMap24@2x.png</include>
			</includes>
		</fileSet>
	</fileSets>
	
	<files>
		<file>
			<source>LICENSE</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>third-party-components.xml</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>plugin.xml</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>README.md</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
	
	<dependencySets>
	    <dependencySet>
	        <unpack>false</unpack>
	        <scope>runtime</scope>
	        <outputDirectory>/lib</outputDirectory>
	    </dependencySet>
	</dependencySets>
</assembly>
